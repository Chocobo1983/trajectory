    "PulseCounterDefault": 10,
    "PulseWaitDefault": 20,
    "RecordTimeDefault": 1000,
    "IqTimestampDefault": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    },
    "NLog": {
      "IncludeScopes": true
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "Warn",
    "internalLogFile": "${var:%CommonAppDataPath%:whenEmpty=${basedir}}/Logs/internal.json",
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      }
    ],
    "targets": {
      "all-file": {
        "type": "File",
        "fileName": "${var:%CommonAppDataPath%:whenEmpty=${basedir}}/Logs/${shortdate}_client_${var:%app-id%}.json",
        "maxArchiveDays": 30,
        "archiveAboveSize": 52428800,
        "archiveEvery": "Day",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "Timestamp",
              "layout": "${date:format=o}"
            },
            {
              "name": "Level",
              "layout": "${level}"
            },
            {
              "name": "Logger",
              "layout": "${logger}"
            },
            {
              "name": "Message",
              "layout": "${message}"
            },
            {
              "name": "Exception",
              "layout": "${exception:format=Message,StackTrace,Data:maxInnerExceptionLevel=5}"
            }
          ]
        }
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Warn",
        "final": true
      },
      {
        "logger": "RPC-*",
        "finalMinLevel": "Warn",
        "writeTo": "all-file",
        "final": true,
        "enabled": true
      },
      {
        "finalMinLevel": "Fatal",
        "logger": "Infozahyst.RSAAS.Core.Transport.MQTT.MqttNetLogger",
        "writeTo": "all-file",
        "final": true,
        "enabled": true
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "all-file"
      }
    ]
  }
}